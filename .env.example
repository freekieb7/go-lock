# Database Configuration
DB_URL=postgres://username:password@localhost:5432/golock?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=5m

# API Security
API_KEY=your_secure_api_key_here

# Server Configuration
SERVER_PORT=8080
SERVER_ENVIRONMENT=development
SERVER_WRITE_TIMEOUT=15s
SERVER_READ_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s
SERVER_MAX_HEADER_BYTES=1048576
BASE_URL=http://localhost:8080

# Security Settings
SECURITY_ENABLE_HSTS=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_OAUTH_REQUESTS=10
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_PUBLIC_REQUESTS=60
RATE_LIMIT_ADMIN_REQUESTS=5
RATE_LIMIT_WINDOW_DURATION=1m

# Cache Configuration
CACHE_ENABLED=true
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
CACHE_DEFAULT_TTL=5m
CACHE_SESSION_TTL=30m
CACHE_JWKS_TTL=24h